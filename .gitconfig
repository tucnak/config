[color]
    diff   = true
    grep   = true
    status = true
    ui     = true

[log]
    decorate = true

[push]
    default = simple

[alias]
    ci  = commit
    cia = commit --amend
    cis  = commit -S
    cias = commit --amend -S
    br  = branch
    co  = checkout
    st  = status --short
    au  = add -u
    cb  = checkout -b
    rh  = reset --hard
    pr  = pull --rebase
    dc  = diff --cached

    slog = log --show-signature
    tree = log --graph --pretty=oneline --abbrev-commit

    pour = merge --no-ff
    sq   = merge --squash

    sync = "!git pull upstream master && git push origin master"

[core]
    pager  = less -+$LESS -FRX
    editor = vim

