[color]
    diff   = true
    grep   = true
    status = true
    ui     = true

[log]
    decorate = true

[push]
    default = simple

[alias]
    ci  = commit
    cia = commit --amend
    sci  = commit -S
    scia = commit --amend -S
    br  = branch
    co  = checkout
    st  = status --short
    au  = add -u
    cb  = checkout -b
    rh  = reset --hard
    pr  = pull --rebase
    dc  = diff --cached

    slog = log --show-signature
    tree = log --graph --pretty=oneline --abbrev-commit

    pour = merge --no-ff -S
    sq   = merge --squash -S

    sync = "!git pull upstream master && git push origin master"

[core]
    pager  = less -+$LESS -FRX
    editor = vim

[user]
    name  = Ian Byrd
	email = ian@byrd.im
    signingkey = 598F598CA3B8055F

[credential]
	helper = osxkeychain

[url "http://anongit.kde.org/"]
    insteadOf = kde:
[url "git@git.kde.org:"]
    pushInsteadOf = kde:

[url "git@github.com:"]
    insteadOf = github:
[url "git@github.com:"]
    pushInsteadOf = github:

[url "git@gitlab.com:"]
    insteadOf = gitlab:
[url "git@gitlab.com:"]
    pushInsteadOf = gitlab:

[filter "lfs"]
    clean = git-lfs clean %f
    smudge = git-lfs smudge %f
    required = true
[gpg]
	program = gpg
